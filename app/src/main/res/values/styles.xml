<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- TextView样式黑色 -->
    <style name="textViewMicroBlack">
        <item name="android:textSize">@dimen/micro</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textViewSmallBlack">
        <item name="android:textSize">@dimen/samll</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textViewMediumBlack">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textViewLargeBlack">
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- TextView样式浅灰色 -->
    <style name="textViewMicroLightGray">
        <item name="android:textSize">@dimen/micro</item>
        <item name="android:textColor">#A4A4A4</item>
    </style>

    <style name="textViewSmallLightGray">
        <item name="android:textSize">@dimen/samll</item>
        <item name="android:textColor">#A4A4A4</item>
    </style>

    <style name="textViewMediumLightGray">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">#A4A4A4</item>
    </style>

    <style name="textViewLargeLightGray">
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textColor">#A4A4A4</item>
    </style>

    <!-- TextView样式白色 -->
    <style name="textViewMicroWhite">
        <item name="android:textSize">@dimen/micro</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="textViewSmallWhite">
        <item name="android:textSize">@dimen/samll</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="textViewMediumWhite">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="textViewLargeWhite">
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
