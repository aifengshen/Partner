<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <!--<item name="android:actionBarStyle">@style/actionbar_def_style</item>-->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="actionbar_def_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 在样式里面直接替换掉actionbar的背景，避免在有的窗口进入慢时导致进入时显示系统默认的actionbar -->
        <item name="android:background">@drawable/actionbar_bottom_bg</item>
        <!-- 在样式里面去掉acionbar的应用图标和标题 -->
        <item name="android:displayOptions">useLogo</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- TextView样式黑色 -->
    <style name="textViewMicroBlack">
        <item name="android:textSize">@dimen/micro</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textViewSmallBlack">
        <item name="android:textSize">@dimen/samll</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textViewMediumBlack">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textViewLargeBlack">
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- TextView样式浅灰色 -->
    <style name="textViewMicroLightGray">
        <item name="android:textSize">@dimen/micro</item>
        <item name="android:textColor">#A4A4A4</item>
    </style>

    <style name="textViewSmallLightGray">
        <item name="android:textSize">@dimen/samll</item>
