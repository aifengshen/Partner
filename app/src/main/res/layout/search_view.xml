<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_color_white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLocateCity"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/locate"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_bg_white_line_littlegray_super_big"
            android:focusable="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edittextClientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="搜索文章"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/text_color_gray"
                android:textSize="@dimen/samll" />

            <LinearLayout
                android:id="@+id/llSearch"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/search" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:background="@color/text_color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCredit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="阳光信用"
            android:textColor="@drawable/selector_tab_text_color"
            android:textSize="19sp" />

        <View
            android:layout_width="1dp"
            android:background="@color/text_color_black"
            android:layout_height="16dp"/>

        <TextView
            android:id="@+id/tvHappy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="阳光信乐"
            android:textColor="@drawable/selector_tab_text_color"
            android:textSize="19sp" />

        <View
            android:layout_width="1dp"
            android:background="@color/text_color_black"
            android:layout_height="16dp"/>

        <TextView
            android:id="@+id/tvActive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="阳光活动"
            android:textColor="@drawable/selector_tab_text_color"
            android:textSize="19sp" />
    </LinearLayout>

    <include layout="@layout/headerview" />


</LinearLayout>