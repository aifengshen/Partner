<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/text_color_white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@color/color_bg_gray"
            app:civ_border_color="@color/color_bg_gray"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tvName"
            style="@style/textViewSmallBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="张三" />

        <TextView
            style="@style/textViewSmallLightGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="对" />

        <TextView
            android:id="@+id/tvArticleTitle"
            style="@style/textViewSmallBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题标题标题标题标题标题标题标题标题题标题题标题题标题题标题题标题" />
    </LinearLayout>


    <TextView
        style="@style/textViewSmallLightGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="进行了评论:" />

    <TextView
        android:id="@+id/tvContent"
        style="@style/textViewMicroBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="拉打飞机爱神的箭哦啊时代峻峰氨基酸的佛家搜到金佛四等奖覅按实际哦年纪是就是fiasco带手机的父爱世纪东方手机的佛急死我剪短发哦你手机欧尼我家搜到覅建安是的缴费soil破事多家非金属" />

</LinearLayout>
