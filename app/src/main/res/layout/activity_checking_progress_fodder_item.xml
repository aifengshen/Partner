<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/text_color_white"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/textViewMediumBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@id/tvChecking"
        android:paddingRight="10dp"
        android:text="光大银行信用卡新年福利" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/textViewMicroLightGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tvTitle"
        android:layout_toLeftOf="@id/tvChecking"
        android:text="提交时间:2018-62244555" />

    <TextView
        android:id="@+id/tvChecking"
        style="@style/textViewSmallWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/corner_25_bg_orange_line_orange"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="审核中"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvPass"
        style="@style/textViewSmallWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/corner_25_bg_green_line_green"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="已通过"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvRefuse"
        style="@style/textViewSmallWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/corner_25_bg_red_line_red"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="已拒绝"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvReason"
        style="@style/textViewMicroLightGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDate"
        android:layout_marginTop="5dp"
        android:text="理由：银行账号不存在"
        android:textColor="@color/gray_color"
        android:visibility="gone" />

</RelativeLayout>
